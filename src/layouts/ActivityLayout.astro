---
import LoadActivity from '../components/LoadActivity.astro'
import Root from './Root.astro'
const { frontmatter } = Astro.props
---

<Root title={frontmatter.title}>
  <section class="content" slot="main-content">
    <slot />
    <LoadActivity isLoadActivity={frontmatter.isLoadActivity} />
    <style is:global>
      .content img {
        aspect-ratio: inherit;
        width: 80%;
        text-align: center;
        display: block;
        margin: auto;
      }

      .content h1,
      .content h2,
      .content img {
        margin-top: 3rem;
      }

      .content p:has(a) {
        border: none;
        padding: 0;
      }

      .content a,
      button {
        border: 1px solid;
        padding: 1rem;
        display: inline-block;
        width: 100%;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.9);
        color: rgba(137, 41, 175, 0.75);
        margin-top: 3rem;
      }

      .content li {
        line-height: 2rem;
      }

      @media (width > 900px) {
        .content a,
        button {
          width: 33%;
          display: block;
        }
      }
    </style>
  </section>
</Root>
