---
import LoadActivity from '../components/LoadActivity.astro'
import TejemasPdf from '../components/TejemasPdf.astro'
import Root from './Root.astro'
const { frontmatter } = Astro.props
---

<Root title={frontmatter.title}>
  <section class="content" slot="main-content">
    <slot />
    <section>
      <LoadActivity isLoadActivity={frontmatter.isLoadActivity} />
      <TejemasPdf isTejemas={frontmatter.isTejemas} />
    </section>
    <style is:global>
      p:has(img) {
        padding: 1.5rem;
      }

      li:has(img) img {
        margin-top: 2rem;
      }

      .content img {
        aspect-ratio: inherit;
        margin-inline: auto;
        display: block;
        margin-block: 0;
      }

      .content h1,
      .content h2 {
        margin-top: 3rem;
      }

      .content p:has(a) {
        border: none;
        padding: 0;
      }

      .content a,
      button {
        border: 1px solid;
        padding: 1rem;
        display: inline-block;
        width: 100%;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.9);
        color: rgba(137, 41, 175, 0.75);
        margin-top: 3rem;
      }

      .content li {
        line-height: 2rem;
      }

      @media (width > 900px) {
        .content a,
        button {
          width: 33%;
          display: block;
        }
      }
    </style>
  </section>
</Root>
